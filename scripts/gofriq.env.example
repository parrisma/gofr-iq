# =============================================================================
# GOFR-IQ Environment Configuration Template
# =============================================================================
# Copy this file to gofriq.env and fill in your actual values
# DO NOT commit gofriq.env with real secrets!
#
# Usage:
#   cp gofriq.env.example gofriq.env
#   # Edit gofriq.env with your secrets
#   source gofriq.env
# =============================================================================

# =============================================================================
# OpenRouter API Configuration
# =============================================================================
# REQUIRED: Get your API key from https://openrouter.ai/keys
export GOFR_IQ_OPENROUTER_API_KEY="your-openrouter-api-key-here"

# OpenRouter API base URL (default: https://openrouter.ai/api/v1)
export GOFR_IQ_OPENROUTER_BASE_URL="${GOFR_IQ_OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}"

# Chat model for entity extraction (default: meta-llama/llama-3.1-70b-instruct)
# Other options: openai/gpt-4-turbo, meta-llama/llama-3.1-70b-instruct
export GOFR_IQ_LLM_MODEL="${GOFR_IQ_LLM_MODEL:-meta-llama/llama-3.1-70b-instruct}"

# Embedding model for vector search (default: qwen/qwen3-embedding-8b)
# Other options: openai/text-embedding-3-large
export GOFR_IQ_EMBEDDING_MODEL="${GOFR_IQ_EMBEDDING_MODEL:-qwen/qwen3-embedding-8b}"

# LLM API timeout in seconds (default: 60)
export GOFR_IQ_LLM_TIMEOUT="${GOFR_IQ_LLM_TIMEOUT:-60}"

# LLM API max retries (default: 3)
export GOFR_IQ_LLM_MAX_RETRIES="${GOFR_IQ_LLM_MAX_RETRIES:-3}"

# =============================================================================
# Authentication Configuration
# =============================================================================
# Auth/Vault configuration (Option A: GOFR_IQ_* everywhere)
# Services should read JWT signing secret from Vault at runtime (do not set JWT secrets here).
export GOFR_IQ_AUTH_BACKEND="${GOFR_IQ_AUTH_BACKEND:-vault}"
export GOFR_IQ_VAULT_URL="${GOFR_IQ_VAULT_URL:-http://gofr-vault:8201}"
export GOFR_IQ_VAULT_MOUNT_POINT="${GOFR_IQ_VAULT_MOUNT_POINT:-secret}"
export GOFR_IQ_VAULT_PATH_PREFIX="${GOFR_IQ_VAULT_PATH_PREFIX:-gofr/auth}"

# Vault dev token (for local development/admin tooling only)
# export GOFR_VAULT_DEV_TOKEN=""

# Disable auth for testing (not recommended for production)
export GOFR_IQ_AUTH_DISABLED="${GOFR_IQ_AUTH_DISABLED:-false}"

# =============================================================================
# Infrastructure Configuration
# =============================================================================
# Neo4j password
export NEO4J_PASSWORD="${NEO4J_PASSWORD:-gofr-dev-password}"

# Docker network name
export GOFR_IQ_DOCKER_NETWORK="${GOFR_IQ_DOCKER_NETWORK:-gofr-net}"

# =============================================================================
# Port Configuration
# =============================================================================
# Ports are loaded from lib/gofr-common/config/gofr_ports.env
# You can override them here if needed

# GOFR-IQ Service Ports
# export GOFR_IQ_MCP_PORT=8080
# export GOFR_IQ_MCPO_PORT=8081
# export GOFR_IQ_WEB_PORT=8082

# Infrastructure Ports
# export GOFR_VAULT_PORT=8201
# export GOFR_NEO4J_HTTP_PORT=7474
# export GOFR_NEO4J_BOLT_PORT=7687
# export GOFR_CHROMA_PORT=8000
